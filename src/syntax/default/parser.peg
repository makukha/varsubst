%prefix "vsub_sx_default"
%auxil "Auxil *"
%value "const char *"
%common {
#include "../../syntax.h"
}

input <- atom* !.
atom  <- '${' var:var '}'         { IF(Set) THEN(Value) ELSE(Input) }
       / '$' var:var              { IF(Set) THEN(Value) ELSE(Input) }
       / .                        { USE(Input) }

var <- <[_a-zA-Z] [_a-zA-Z0-9]*>  { $$ = $1; }
